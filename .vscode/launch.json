{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "qemu-gdb (BIOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/system",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "miDebuggerServerAddress": ":2345",
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false,
                },
                {
                    "text": "set disassembly-flavor intel"
                },
                {
                    "text": "set architecture i386"
                }
            ],
            "preLaunchTask": "qemu-gdb (BIOS)",
        },
        {
            "name": "qemu-gdb (UEFI)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/system",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "miDebuggerServerAddress": ":2345",
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false,
                },
                {
                    "text": "set disassembly-flavor intel"
                },
                {
                    "text": "set architecture i386"
                }
            ],
            "preLaunchTask": "qemu-gdb (UEFI)",
        },
        {
            "name": "gdb (serial)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/system",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "miDebuggerServerAddress": "/dev/ttyUSB0",
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false,
                },
                {
                    "text": "set disassembly-flavor intel"
                },
                {
                    "text": "set architecture i386"
                },
                {
                    "text": "set serial baud 115200"
                }
            ]
        },
    ]
}